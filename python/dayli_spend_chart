plt.figure(figsize=(15, 5))
plt.plot(daily['ad_date'], daily['total_spend'], label='Daily spend', color='skyblue')
plt.plot(daily['ad_date'], daily['spend_rolling'], label='7-Daily moving average', color='navy')
plt.title('Daily spend (2021)')
plt.xlabel('Date')
plt.ylabel('Sum, USD')
plt.legend()
plt.grid(True)
plt.xticks(list(daily['ad_date'])[::50], rotation=45)
plt.show()
