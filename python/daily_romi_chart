plt.figure(figsize=(15, 5))
plt.plot(daily['ad_date'], daily['ROMI'], linestyle='-', color='lightgreen')
plt.plot(daily['ad_date'],daily['romi_rolling'], label='7-daily moving average', color='darkgreen')
plt.title('Daily ROMI (2021)')
plt.xlabel('Date')
plt.ylabel('ROMI')
plt.legend()
plt.grid(True)
plt.xticks(rotation=45)
plt.show()
